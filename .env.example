# ============================================================================
# CrapGPT Mega AI Orchestration Configuration
# ============================================================================
#
# This is a comprehensive configuration template for the CrapGPT platform.
# Copy this file to .env and fill in your actual values.
#
# ARCHITECTURE OVERVIEW:
# - Cloudflare R2: Unified artifact storage with standardized folder structure
# - Redis: Worker queues for remote-first execution
# - Multi-provider AI: OpenRouter, FAL, ModelsLab for different use cases
# - Orchestration Frameworks: Hexstrike, Toolhive, OpenOps, Arcade, MCPJungle
# - Security: Strict separation between control plane (VPS) and workers
#
# SECURITY PRINCIPLE: 
# - Run local only for light, deterministic, safe operations
# - Push all heavy, risky, or GPU-intensive tasks to remote workers
# - Store all artifacts in R2 with presigned URLs for secure access
#
# ============================================================================

# ============================================================================
# DATABASE & CORE
# ============================================================================

DATABASE_URL=postgresql://username:password@localhost:5432/crapgpt_db
JWT_SECRET=your_super_secret_jwt_key_here
WASP_WEB_CLIENT_URL=http://localhost:3000
WASP_SERVER_URL=http://localhost:3001

# ============================================================================
# AUTHENTICATION PROVIDERS
# ============================================================================

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================================================
# AI PROVIDERS
# ============================================================================

# OpenRouter - Multi-model AI provider
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1

# FAL - Fast AI inference
FAL_API_KEY=your_fal_api_key
FAL_ENDPOINT=https://fal.run/fal-ai

# ModelsLab - Specialized AI models
MODELSLAB_API_KEY=your_modelslab_api_key
MODELSLAB_ENDPOINT=https://modelslab.com/api/v6

# ============================================================================
# AI ORCHESTRATION FRAMEWORKS
# ============================================================================

# Hexstrike-AI - Low-latency inference engine
HEXSTRIKE_API_KEY=your_hexstrike_api_key
HEXSTRIKE_ENDPOINT=http://localhost:8080

# Toolhive - Tool registry and execution
TOOLHIVE_API_KEY=your_toolhive_api_key
TOOLHIVE_ENDPOINT=https://api.toolhive.com
TOOLHIVE_REGISTRY=crapgpt-tools

# OpenOps - Workflow automation
OPENOPS_API_KEY=your_openops_api_key
OPENOPS_ENDPOINT=https://api.openops.cloud
OPENOPS_WORKSPACE=crapgpt-workspace

# Arcade - Infrastructure orchestration
ARCADE_API_KEY=your_arcade_api_key
ARCADE_ENDPOINT=https://api.arcade.dev
ARCADE_PROJECT=crapgpt

# MCPJungle - Agent communication hub
MCPJUNGLE_API_KEY=your_mcpjungle_api_key
MCPJUNGLE_ENDPOINT=https://hub.mcpjungle.com
MCPJUNGLE_HUB=crapgpt-hub

# ============================================================================
# CLOUDFLARE R2 UNIFIED STORAGE
# ============================================================================

# Cloudflare R2 - Primary artifact storage
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=crapgpt-artifacts
R2_REGION=auto
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-custom-domain.com

# R2 Security Configuration
R2_MAX_FILE_SIZE=100MB
R2_PRESIGNED_URL_EXPIRATION=3600
R2_DOWNLOAD_URL_EXPIRATION=86400
R2_VIRUS_SCANNING_ENABLED=true

# ============================================================================
# REDIS & WORKER QUEUES
# ============================================================================

# Redis - Worker queue and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Worker Queue Configuration
WORKER_CONCURRENCY=5
WORKER_TIMEOUT=300000
WORKER_MAX_RETRIES=3

# ============================================================================
# ADDITIONAL SERVICES (Optional)
# ============================================================================

SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================================================
# CONFIGURATION
# ============================================================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Orchestration Settings
ORCHESTRATION_MODE=enabled
MAX_CONCURRENT_AGENTS=10
REMOTE_FIRST_EXECUTION=true
SECURITY_ENFORCEMENT_LEVEL=strict

# File Processing
VIRUS_SCANNING_ENABLED=true
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=.txt,.json,.csv,.md,.pdf,.doc,.docx,.png,.jpg,.jpeg,.gif,.webp,.mp3,.wav,.mp4,.mov,.zip,.tar,.gz

# Agent Configuration
DEFAULT_AGENT_PROVIDER=openrouter
DEFAULT_AGENT_MODEL=gpt-4o-mini
AGENT_MEMORY_LIMIT=100
AGENT_CONTEXT_WINDOW=8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false
SESSION_SECRET=your_session_secret_here

# Monitoring & Analytics
MONITORING_ENABLED=true
ANALYTICS_ENABLED=false
ERROR_REPORTING_ENABLED=true

# Feature Flags
FEATURE_ENHANCED_AGENTS=true
FEATURE_MEDIA_GENERATION=true
FEATURE_INFRASTRUCTURE_AUTOMATION=true
FEATURE_SECURITY_SCANNING=false
FEATURE_REALTIME_COLLABORATION=false

# Development
DEBUG=crapgpt:*
WATCH_FILES=true
HOT_RELOAD=true
SOURCE_MAPS=true
